{
  "compilerOptions": {
     "target": "es2019",
     "module": "commonjs",
     "moduleResolution": "node",
     "outDir": "./dist",
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "esModuleInterop": true,
     "sourceMap": true,
     "allowJs": true,
     "rootDir": ".",
     "resolveJsonModule": true
  },
  "include": ["./src"],
  "exclude": [
     "./node_modules/",
     "./dist/",
     "src/__tests__"
   ],
}
